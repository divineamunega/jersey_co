---
import "../styles/global.css";
import Layout from "../layouts/PageLayout.astro";
import AnimatedButton from "../components/AnimatedButton.astro";
import QuantitySelector from "../components/QuantitySelector.astro";
---

<Layout>
  <main id="cart"></main>
  <div class="min-h-screen px-6 pt-28 md:px-20">
    <div class="mx-auto max-w-7xl">
      <h1 class="mb-8 text-4xl font-bold">Shopping Cart</h1>

      <!-- Cart Content -->
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <!-- Cart Items Section -->
        <div class="lg:col-span-2">
          <div class="rounded-lg bg-white shadow-sm">
            <!-- Empty Cart State -->
            <div class="hidden p-8 text-center">
              <p class="mb-4 text-gray-500">Your cart is empty</p>
              <AnimatedButton>Continue Shopping</AnimatedButton>
            </div>

            <!-- Cart Items List -->
            <div class="divide-y divide-gray-200">
              <!-- Sample Cart Item -->
              <div class="flex gap-4 p-6">
                <img
                  src="/path-to-image.jpg"
                  alt="Product"
                  class="h-24 w-24 rounded-md object-cover"
                />
                <div class="flex flex-1 flex-col gap-2">
                  <div class="flex justify-between">
                    <h3 class="font-semibold">Arsenal Home Jersey 23/24</h3>
                    <button class="text-gray-400 hover:text-red-500">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="flex items-end justify-between">
                    <QuantitySelector label={false} />
                    <span class="font-bold">₦7,999.99</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div class="rounded-lg bg-white p-6 shadow-sm">
            <h2 class="mb-4 text-xl font-bold">Order Summary</h2>
            <div class="space-y-4">
              <div class="flex justify-between">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-semibold">₦7,999.99</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Shipping</span>
                <span class="font-semibold">₦1,000.00</span>
              </div>
              <div class="border-t border-gray-200 pt-4">
                <div class="flex justify-between">
                  <span class="font-bold">Total</span>
                  <span class="font-bold">₦8,999.99</span>
                </div>
              </div>
              <button
                class="w-full rounded-full bg-black py-3 text-white transition-colors hover:bg-gray-800"
              >
                Proceed to Checkout
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
